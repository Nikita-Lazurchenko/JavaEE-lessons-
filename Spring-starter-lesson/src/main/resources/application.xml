<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="application.properties"/>

    <bean id="repository1" name="userRepository" class="com.example.database.repository.UserRepository">
        <constructor-arg index="0" name="userName" value="Andrey"/>
        <constructor-arg index="1" name="poolSize" value="${db.pool.size}"/>
        <constructor-arg index="2">
            <list>
                <value>1</value>
                <value>2</value>
                <value>3</value>
            </list>
        </constructor-arg>
        <constructor-arg index="3">
            <map>
                <entry key="One" value="1"/>
                <entry key="Two" value="2"/>
                <entry key="Tree" value="3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="repository2" class="com.example.database.repository.UserRepository">
        <property name="username" value="Nikita"/>
        <property name="properties">
            <map>
                <entry key="One" value="1"/>
                <entry key="Two" value="2"/>
                <entry key="Tree" value="3"/>
            </map>
        </property>
    </bean>

    <bean name="userDto" class="com.example.dto.UserDto"/>
    <bean name="userMapper" class="com.example.mapper.UserMapper">
        <property name="userDto" ref="userDto"/>
    </bean>
    <bean name="userService" class="com.example.service.UserService">
        <property name="userMapper" ref="userMapper"/>
        <property name="userRepository" ref="userRepository"/>
    </bean>


</beans>